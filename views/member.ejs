<% if (member) { %>
<h2 class="mt-6 text-3xl font-extrabold text-neutral-900">
  You are already a member!
</h2>
<% } else { %>
<div class="flex flex-col items-center py-12 px-6 lg:px-8">
  <h2 class="mt-6 text-3xl font-extrabold text-neutral-900"><%= title %></h2>
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-6 shadow rounded-lg sm:px-10">
      <h2 class="font-medium text-gray-700 py-4">
        What kind of band never plays music?
      </h2>
      <form action="" method="post" class="mb-0 space-y-6">
        <div>
          <label for="passcode" class="block text-sm font-medium text-gray-700"
            >Passcode</label
          >
          <input
            type="text"
            name="passcode"
            class="w-full border border-gray-300 px-3 py-2 rounded-lg shadow-sm focus:outline-none focus:border-indigo-500 focus:ring-1 focus:ring-indigo-500"
          />
        </div>
        <button
          class="w-full bg-violet-600 hover:bg-violet-700 py-2 px-4 text-white text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Become a member!
        </button>
      </form>
    </div>
  </div>
  <% } %> <% if(locals.errors) { %> <%- include('form-errors'); %> <% } %>
</div>
